<div class="modal fade" id="invite" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center">Invite Friend</h4>
      </div>
      <div class="modal-body modal-margin">
        <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), html: {method: :post, class: "form col-md-12 center-block"} do |f| %>
          <%= devise_error_messages! %>

        <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-group">
          <%= f.text_field field, class: "form-control" %>
        </div>
        <% end -%>

          <div class="form-group">
            <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer no-border">
      </div>
    </div>
  </div>
</div> 
