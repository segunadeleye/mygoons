<h2><%= t 'devise.invitations.edit.header' %></h2>

<%= form_for resource, :as => resource_name, url: friendship_path(resource_name), html: { method: :put, class: "form-horizontal" } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

<fieldset>
  <div class="form-group">
    <%= f.label :name, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
    <%= f.submit t("devise.invitations.edit.submit_button") %>
    </div>
  </div>
<% end %>

</fieldset>
