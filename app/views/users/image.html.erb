<%= form_tag({action: :upload}, multipart: true, class: "form-horizontal") do %>

  <div class="form-group">
    <div class="col-lg-3">
    <%= file_field_tag :image, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-5">
      <%= submit_tag "Upload Image", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
